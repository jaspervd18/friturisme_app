{
  "expo": {
    "name": "friturisme-app",
    "slug": "friturisme-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "friturismeapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-image",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Friturisme gebruikt uw locatie om frituren in de buurt te tonen.",
          "locationWhenInUsePermission": "Friturisme gebruikt uw locatie om frituren in de buurt te tonen."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Friturisme heeft toegang tot uw foto's nodig om foto's bij check-ins te voegen.",
          "cameraPermission": "Friturisme heeft toegang tot uw camera nodig om foto's bij check-ins te maken."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
